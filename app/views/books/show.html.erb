

<div class="row">
<div class="col-md-4">
    <%= image_tag @book.resource.url(:medium), class: "img-responsive" %>
</div>
<div class="col-md-6 col-md-offset-2" align="center">
    <div class="well center">
    <h1>
  <%= @book.title %>
  <hr>
    </h1>
    <h3>
  <%= @book.author %>
  </h3>
  <p>
  <%= @book.description %>
  </p>
  <h1>
      US$
  <%= @book.price.to_f / 100 %>
</h1>
<p>Avaliable? 
  <%= @book.avaliable %>
  </p>
  <p>
  <%= @book.user.email %>
  </p>
<%= link_to 'Edit', edit_book_path(@book) %> |
<%= link_to 'Back', books_path %> | 
<%= link_to 'Destroy' , book_path(@book), method: :delete, data: { confirm: "Vc tem certeza?" } %>


<%= form_tag buy_path(slug: @book.slug) do %>
    <script
    src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
    data-name="BK Bookstore"
    data-description="<%= @book.title %>"
    data-amount="<%= @book.price %>"
    data-email="<%= current_user.email %>"
    >
</script>
<% end %>

</div>
</div>
